<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="QuickCode.Controls.QrCodeLocationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:QuickCode.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance vm:QrCodeLocationViewModel, IsDesignTimeCreatable=False}">
    <Grid ColumnSpacing="10" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <NumberBox Grid.Row="0" Grid.Column="0"
                   x:Uid="QrCodeLocationLatitudeBox"
                   Minimum="-90" Maximum="90" IsNullable="True"
                   SpinButtonPlacementMode="Hidden"
                   Value="{Binding Latitude, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <NumberBox Grid.Row="0" Grid.Column="1"
                   x:Uid="QrCodeLocationLongitudeBox"
                   Minimum="-180" Maximum="180" IsNullable="True"
                   SpinButtonPlacementMode="Hidden"
                   Value="{Binding Longitude, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="8">
            <Button x:Uid="QrCodeLocationUseCurrentLocationButton"
                    Command="{Binding UseCurrentLocationCommand}"
                    IsEnabled="{Binding CanRequestLocation, Mode=OneWay}"/>
            <Button x:Uid="QrCodeLocationPickOnMapButton"
                    Click="OnPickLocationClick"
                    IsEnabled="{Binding CanRequestLocation, Mode=OneWay}"/>
            <ProgressRing Width="32" Height="32"
                          IsActive="{Binding IsBusy, Mode=OneWay}"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                   TextWrapping="Wrap" Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                   Visibility="{Binding StatusMessage, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"
                   Text="{Binding StatusMessage, Mode=OneWay}"/>
    </Grid>
</UserControl>
