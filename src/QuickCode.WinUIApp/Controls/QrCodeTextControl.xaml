<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="QuickCode.Controls.QrCodeTextControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuickCode.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:QuickCode.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance vm:QrCodeTextDataViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <TextBox x:Uid="QrCodeGeneratorTextControlBox" 
                 Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextWrapping="Wrap" AcceptsReturn="True" MinHeight="180"/>
    </Grid>
</UserControl>
