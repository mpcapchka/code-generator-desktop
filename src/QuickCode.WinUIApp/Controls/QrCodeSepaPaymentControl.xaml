<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="QuickCode.Controls.QrCodeSepaPaymentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuickCode.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:QuickCode.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance vm:QrCodeSepaPaymentDataViewModel, IsDesignTimeCreatable=False}">
    <Grid ColumnSpacing="10" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                 x:Uid="SepaNameTextBox"
                 Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                 x:Uid="SepaIbanTextBox" CharacterCasing="Upper" MaxLength="34"
                 Text="{Binding Iban, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBox Grid.Row="2" Grid.Column="0"
                 x:Uid="SepaBicTextBox" CharacterCasing="Upper" MaxLength="11"
                 Text="{Binding Bic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBox Grid.Row="2" Grid.Column="1"
                 x:Uid="SepaAmountTextBox" InputScope="CurrencyAmount"
                 Text="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBox Grid.Row="3" Grid.Column="0"
                 x:Uid="SepaPurposeTextBox" CharacterCasing="Upper" MaxLength="4"
                 Text="{Binding Purpose, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBox Grid.Row="3" Grid.Column="1"
                 x:Uid="SepaPaymentReferenceTextBox" CharacterCasing="Upper" MaxLength="35"
                 Text="{Binding PaymentReference, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" MinHeight="80"
                 x:Uid="SepaRemittanceInformationTextBox" TextWrapping="Wrap" AcceptsReturn="True" MaxLength="140"
                 Text="{Binding RemittanceInformation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" MinHeight="80"
                 x:Uid="SepaNoteTextBox" TextWrapping="Wrap" AcceptsReturn="True" MaxLength="140"
                 Text="{Binding Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
